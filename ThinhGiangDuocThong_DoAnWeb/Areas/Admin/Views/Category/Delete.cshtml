@model ThinhGiangDuocThong_DoAnWeb.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Xác nhận xóa danh mục</h4>
            </div>
            <div class="card-body bg-light">
                <div class="alert alert-warning mb-4">
                    <strong>Bạn có chắc chắn muốn xóa danh mục này?</strong>
                </div>
                <h5 class="mb-4">Tên danh mục: <span class="fw-bold">@Model.Name</span></h5>
                <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-between">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">Xóa</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>
