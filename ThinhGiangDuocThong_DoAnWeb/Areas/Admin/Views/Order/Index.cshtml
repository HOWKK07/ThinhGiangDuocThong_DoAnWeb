@section Scripts {
    <script>
        $(document).ready(function() {
            const searchInput = $('#searchInput');
            const dateFilter = $('#dateFilter');
            const priceFilter = $('#priceFilter');
            const clearFilters = $('#clearFilters');
            const orderTable = $('#orderTable tbody');
            const noResults = $('#noResults');

            function filterOrders() {
                const searchTerm = searchInput.val().toLowerCase();
                const selectedDate = dateFilter.val();
                const selectedPrice = priceFilter.val();
                let visibleCount = 0;

                orderTable.find('tr').each(function() {
                    const row = $(this);
                    const orderId = row.data('order-id').toString();
                    const customer = row.data('customer') || '';
                    const orderDate = new Date(row.data('date'));
                    const price = parseFloat(row.data('price')) || 0;
                    
                    const matchesSearch = orderId.includes(searchTerm) || 
                                        customer.toLowerCase().includes(searchTerm);
                    
                    let matchesDate = true;
                    if (selectedDate) {
                        const today = new Date();
                        const startOfDay = new Date(today.getFullYear(), today.getMonth(), today.getDate());
                        const startOfWeek = new Date(today.getFullYear(), today.getMonth(), today.getDate() - today.getDay());
                        const startOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
                        
                        switch(selectedDate) {
                            case 'today':
                                matchesDate = orderDate >= startOfDay;
                                break;
                            case 'week':
                                matchesDate = orderDate >= startOfWeek;
                                break;
                            case 'month':
                                matchesDate = orderDate >= startOfMonth;
                                break;
                        }
                    }
                    
                    let matchesPrice = true;
                    if (selectedPrice) {
                        const priceRange = selectedPrice.split('-');
                        if (priceRange.length === 2) {
                            const minPrice = parseFloat(priceRange[0]);
                            const maxPrice = parseFloat(priceRange[1]);
                            matchesPrice = price >= minPrice && price <= maxPrice;
                        } else if (selectedPrice === '1000000+') {
                            matchesPrice = price >= 1000000;
                        }
                    }

                    if (matchesSearch && matchesDate && matchesPrice) {
                        row.show();
                        visibleCount++;
                    } else {
                        row.hide();
                    }
                });

                if (visibleCount === 0) {
                    orderTable.hide();
                    noResults.show();
                } else {
                    orderTable.show();
                    noResults.hide();
                }
            }

            searchInput.on('input', filterOrders);
            dateFilter.on('change', filterOrders);
            priceFilter.on('change', filterOrders);
            
            clearFilters.on('click', function() {
                searchInput.val('');
                dateFilter.val('');
                priceFilter.val('');
                filterOrders();
            });
        });
    </script>
