@model ThinhGiangDuocThong_DoAnWeb.Models.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="row g-0">
                    <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded p-3" alt="@Model.Name" style="max-height: 300px;" />
                        }
                        else
                        {
                            <span class="text-muted">Không có ảnh</span>
                        }
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title mb-3">@Model.Name</h3>
                            <h5 class="text-danger mb-3">Giá: @Model.Price.ToString("N0") VNĐ</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Danh mục</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>

                                <dt class="col-sm-4">Tác giả</dt>
                                <dd class="col-sm-8">@Model.Author</dd>

                                <dt class="col-sm-4">Nhà xuất bản</dt>
                                <dd class="col-sm-8">@Model.Publisher</dd>

                                <dt class="col-sm-4">Năm xuất bản</dt>
                                <dd class="col-sm-8">@Model.PublicationYear</dd>

                                <dt class="col-sm-4">Ngôn ngữ</dt>
                                <dd class="col-sm-8">@Model.Language</dd>

                                <dt class="col-sm-4">Mô tả</dt>
                                <dd class="col-sm-8">@Model.Description</dd>
                            </dl>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm mt-3">Quay lại danh sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
