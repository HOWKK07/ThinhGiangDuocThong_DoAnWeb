@model ThinhGiangDuocThong_DoAnWeb.Models.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-7">
        <div class="card shadow-lg">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Xác nhận xóa sản phẩm</h4>
            </div>
            <div class="card-body bg-light">
                <dl class="row">
                    <dt class="col-sm-4">Tên Sách</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Giá</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("N0")</dd>

                    <dt class="col-sm-4">Danh mục</dt>
                    <dd class="col-sm-8">@Model.Category?.Name</dd>

                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
                <form asp-area="Admin" asp-controller="Product" asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">Xóa</button>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
