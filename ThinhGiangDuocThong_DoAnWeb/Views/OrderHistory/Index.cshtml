@model IEnumerable<ThinhGiangDuocThong_DoAnWeb.Models.Order>
@{
    ViewData["Title"] = "Lịch sử mua hàng - Bán Sách.com";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-primary text-white rounded-3 p-4 text-center shadow">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-history me-3"></i>Lịch sử mua hàng
                </h1>
                <p class="lead mb-0">Xem lại các đơn hàng đã đặt</p>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="alert alert-info text-center">
                    <i class="fas fa-shopping-bag me-3" style="font-size:3rem;"></i>
                    <h4 class="mt-3">Chưa có đơn hàng nào</h4>
                    <p class="mb-3">Bạn chưa có đơn hàng nào. Hãy mua sắm để tạo đơn hàng đầu tiên!</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-shopping-cart me-1"></i>Mua sắm ngay
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Danh sách đơn hàng (@Model.Count() đơn hàng)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center">Mã đơn hàng</th>
                                        <th>Ngày đặt</th>
                                        <th class="text-center">Số sản phẩm</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <span class="badge bg-secondary fs-6">#@order.Id</span>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-semibold">@order.OrderDate.ToString("dd/MM/yyyy")</span>
                                                    <small class="text-muted">@order.OrderDate.ToString("HH:mm")</small>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">
                                                    @order.OrderDetails.Count sản phẩm
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-bold text-success fs-5">
                                                    @order.TotalPrice.ToString("N0") ₫
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="Details" asp-route-id="@order.Id" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-shopping-bag fa-2x mb-2"></i>
                        <h4>@Model.Count()</h4>
                        <p class="mb-0">Tổng đơn hàng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-money-bill-wave fa-2x mb-2"></i>
                        <h4>@Model.Sum(o => o.TotalPrice).ToString("N0") ₫</h4>
                        <p class="mb-0">Tổng chi tiêu</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-box fa-2x mb-2"></i>
                        <h4>@Model.Sum(o => o.OrderDetails.Count)</h4>
                        <p class="mb-0">Tổng sản phẩm</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-bottom: 1px solid #dee2e6;
        border-radius: 10px 10px 0 0 !important;
    }
    
    .badge {
        font-size: 0.875rem;
    }
    
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style> 