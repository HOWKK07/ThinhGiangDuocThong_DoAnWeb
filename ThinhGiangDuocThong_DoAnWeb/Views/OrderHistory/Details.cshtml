@model ThinhGiangDuocThong_DoAnWeb.Models.Order
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.Id} - Bán Sách.com";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-primary text-white rounded-3 p-4 shadow">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="display-6 fw-bold mb-2">
                            <i class="fas fa-receipt me-3"></i>Chi tiết đơn hàng
                        </h1>
                        <p class="lead mb-0">Mã đơn hàng: <span class="badge bg-light text-dark fs-6">#@Model.Id</span></p>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin đơn hàng -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin đơn hàng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-semibold text-muted">Ngày đặt:</label>
                        <div class="fs-5">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-semibold text-muted">Tổng tiền:</label>
                        <div class="fs-4 fw-bold text-success">@Model.TotalPrice.ToString("N0") ₫</div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-semibold text-muted">Số sản phẩm:</label>
                        <div class="fs-5">@Model.OrderDetails.Count sản phẩm</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                    {
                        <div class="mb-3">
                            <label class="fw-semibold text-muted">Địa chỉ giao hàng:</label>
                            <div class="fs-6">@Model.ShippingAddress</div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="fw-semibold text-muted">Ghi chú:</label>
                            <div class="fs-6">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Danh sách sản phẩm -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>Danh sách sản phẩm
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-3" style="width: 60px; height: 60px; overflow: hidden; border-radius: 8px; background: #f8f9fa;">
                                                    @if (!string.IsNullOrEmpty(detail.Product.ImageUrl))
                                                    {
                                                        <img src="@detail.Product.ImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="@detail.Product.Name" />
                                                    }
                                                    else
                                                    {
                                                        <div class="d-flex align-items-center justify-content-center h-100">
                                                            <i class="fas fa-book text-muted"></i>
                                                        </div>
                                                    }
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">@detail.Product.Name</h6>
                                                    @if (!string.IsNullOrEmpty(detail.Product.Author))
                                                    {
                                                        <small class="text-muted">Tác giả: @detail.Product.Author</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary fs-6">@detail.Quantity</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-semibold">@detail.Price.ToString("N0") ₫</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold text-success">@((detail.Price * detail.Quantity).ToString("N0")) ₫</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold fs-5">Tổng cộng:</td>
                                    <td class="text-end fw-bold fs-5 text-success">@Model.TotalPrice.ToString("N0") ₫</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                <i class="fas fa-shopping-cart me-1"></i>Mua sắm tiếp
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-history me-1"></i>Xem tất cả đơn hàng
            </a>
        </div>
    </div>
</div>

<style>
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-bottom: 1px solid #dee2e6;
        border-radius: 10px 10px 0 0 !important;
    }
    
    .badge {
        font-size: 0.875rem;
    }
    
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .table tfoot {
        border-top: 2px solid #dee2e6;
    }
</style> 