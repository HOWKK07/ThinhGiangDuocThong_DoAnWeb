@using ThinhGiangDuocThong_DoAnWeb.Extensions
@using ThinhGiangDuocThong_DoAnWeb.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThinhGiangDuocThong_DoAnWeb</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ThinhGiangDuocThong_DoAnWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Views/Shared/_Layout.cshtml.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* Giữ lại các CSS khác, xóa phần search bar */
    </style>
</head>
<body style="font-family: 'Roboto', sans-serif; background: #f8f9fa; min-height: 100vh; display: flex; flex-direction: column;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fw-bold">Bán Sách.com</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                      
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="quanlyDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Quản lý
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="quanlyDropdown">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Quản lý sách</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Quản lý danh mục</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Index">Quản lý tài khoản</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="Index">Quản lý đơn hàng</a></li>
                                </ul>
                            </li>
                        }
                        <!-- Thêm các mục menu khác nếu cần -->
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-area="" asp-controller="ShoppingCart" asp-action="Index" title="Giỏ hàng">
                                <span style="font-size: 1.2rem;">🛒</span>
                                @{
                                    var cart = Context.Session.GetObjectFromJson<ShoppingCart>("Cart");
                                    var itemCount = cart?.Items?.Count ?? 0;
                                }
                                @if (itemCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                                        @itemCount
                                    </span>
                                }
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container py-4 flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer id="mainFooter" class="footer mt-auto py-3 bg-dark text-light" style="display: none; opacity: 0; transition: opacity 0.4s;">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h6 class="text-uppercase fw-bold mb-2">Bán Sách.com</h6>
                    <p class="mb-1">Nền tảng mua bán sách trực tuyến uy tín, đa dạng thể loại, giá tốt cho mọi nhà.</p>
                    <div class="d-flex gap-2 mt-2">
                        <a href="#" class="text-light" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light" title="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-light" title="Email"><i class="bi bi-envelope"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h6 class="text-uppercase fw-bold mb-2">Liên kết nhanh</h6>
                    <ul class="list-unstyled mb-0">
                        <li><a class="text-light text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a class="text-light text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a></li>

                    </ul>
                   
                </div>
                <div class="col-md-4">
                    <h6 class="text-uppercase fw-bold mb-2">Liên hệ</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><i class="bi bi-geo-alt-fill me-2"></i> 123 Đường Sách, Quận 1, TP.HCM</li>
                        <li class="mb-1"><i class="bi bi-telephone-fill me-2"></i> 0123 456 789</li>
                        <li><i class="bi bi-envelope-fill me-2"></i> support@bansach.com</li>
                    </ul>
                </div>
            </div>
            <div class="text-center pt-3 border-top border-secondary mt-3" style="font-size:0.95rem;">
                &copy; 2025 Bán Sách.com. Đã đăng ký bản quyền.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
