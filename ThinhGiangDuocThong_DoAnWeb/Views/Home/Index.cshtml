@model IEnumerable<ThinhGiangDuocThong_DoAnWeb.Models.Product>
@{
    if (ViewBag.SearchTerm != null)
    {
        ViewData["Title"] = $"Tìm kiếm: {ViewBag.SearchTerm} - Bán Sách.com";
    }
    else if (ViewBag.FilteredByCategory == true)
    {
        ViewData["Title"] = $"Danh mục: {ViewBag.SelectedCategoryName} - Bán Sách.com";
    }
    else
    {
        ViewData["Title"] = "Trang Chủ - Bán Sách.com";
    }
}

<div class="container-fluid py-4">
    <!-- Search Results Header -->
    @if (ViewBag.SearchTerm != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="mb-1">
                            <i class="fas fa-search me-2"></i>Kết quả tìm kiếm cho: "<strong>@ViewBag.SearchTerm</strong>"
                        </h5>
                        <p class="mb-0">Tìm thấy @ViewBag.SearchResultsCount sản phẩm</p>
                    </div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-times me-1"></i>Xóa tìm kiếm
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Category Filter Header -->
    @if (ViewBag.FilteredByCategory == true)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="mb-1">
                            <i class="fas fa-filter me-2"></i>Đang lọc theo danh mục: "<strong>@ViewBag.SelectedCategoryName</strong>"
                        </h5>
                        <p class="mb-0">Hiển thị @Model.Count() sản phẩm trong danh mục này</p>
                    </div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">
                        <i class="fas fa-times me-1"></i>Xem tất cả sản phẩm
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="bg-primary text-white rounded-3 p-5 text-center shadow-lg">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-book me-3" style="font-size:3rem;"></i> Chào mừng đến với Bán Sách.com
                </h1>
                <p class="lead mb-0">Khám phá thế giới tri thức với bộ sưu tập sách đa dạng và phong phú</p>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">
                @if (ViewBag.SearchTerm != null)
                {
                    @Html.Raw("<i class='fas fa-search me-2' style='font-size:2rem;'></i> Kết Quả Tìm Kiếm")
                }
                else if (ViewBag.FilteredByCategory == true)
                {
                    @Html.Raw("<i class='fas fa-filter me-2' style='font-size:2rem;'></i> Sản Phẩm Theo Danh Mục")
                }
                else
                {
                    @Html.Raw("<i class='fas fa-shopping-cart me-2' style='font-size:2rem;'></i> Sản Phẩm Nổi Bật")
                }
            </h2>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert alert-info text-center">
                    <i class="fas fa-book me-2" style="font-size:2rem;"></i>
                    @if (ViewBag.SearchTerm != null)
                    {
                        <h4>Không tìm thấy sản phẩm nào</h4>
                        <p>Không có sản phẩm nào phù hợp với từ khóa "<strong>@ViewBag.SearchTerm</strong>".</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i>Xem tất cả sản phẩm
                        </a>
                    }
                    else if (ViewBag.FilteredByCategory == true)
                    {
                        <h4>Không có sản phẩm trong danh mục này</h4>
                        <p>Danh mục "<strong>@ViewBag.SelectedCategoryName</strong>" hiện chưa có sản phẩm nào.</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i>Xem tất cả sản phẩm
                        </a>
                    }
                    else
                    {
                        <h4>Chưa có sản phẩm nào</h4>
                        <p>Vui lòng quay lại sau hoặc liên hệ admin để thêm sản phẩm.</p>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-shadow" style="transition: transform 0.2s, box-shadow 0.2s;">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" 
                           class="text-decoration-none text-dark">
                            <div class="card-img-top-container" style="height: 250px; overflow: hidden; background: #f8f9fa;">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top h-100 w-100" style="object-fit: cover;" alt="@product.Name" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-book" style="font-size:4rem; color: #dee2e6;"></i>
                                    </div>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold text-truncate hover-text-primary" title="@product.Name">
                                    @product.Name
                                </h5>
                                
                                @if (!string.IsNullOrEmpty(product.Author))
                                {
                                    <p class="card-text text-muted small mb-1">
                                        <i class="fas fa-user me-1" style="font-size:0.9rem;"></i> Tác giả: @product.Author
                                    </p>
                                }
                                
                                @if (!string.IsNullOrEmpty(product.Publisher))
                                {
                                    <p class="card-text text-muted small mb-1">
                                        <i class="fas fa-building me-1" style="font-size:0.9rem;"></i> NXB: @product.Publisher
                                    </p>
                                }
                                
                                @if (product.PublicationYear.HasValue)
                                {
                                    <p class="card-text text-muted small mb-2">
                                        <i class="fas fa-calendar me-1" style="font-size:0.9rem;"></i> Năm: @product.PublicationYear
                                    </p>
                                }
                                
                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    <p class="card-text small text-muted mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                        @product.Description
                                    </p>
                                }
                                
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="fs-5 fw-bold text-success">
                                            <i class="fas fa-money-bill-wave me-1" style="font-size:1.1rem;"></i> @product.Price.ToString("N0") ₫
                                        </span>
                                        @if (product.Category != null)
                                        {
                                            <span class="badge bg-primary">@product.Category.Name</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </a>
                        <!-- Add to Cart Button - Separate from the card link -->
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-flex gap-2">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="number" name="quantity" value="1" min="1" max="99" class="form-control" style="width: 70px;" />
                                <button type="submit" class="btn btn-success flex-grow-1 rounded-pill shadow-sm">
                                    <i class="fas fa-cart-plus me-1" style="font-size:1.1rem;"></i> Thêm vào giỏ
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    .card-img-top-container {
        position: relative;
    }
    .card-img-top-container img {
        transition: transform 0.3s ease;
    }
    .card:hover .card-img-top-container img {
        transform: scale(1.05);
    }
    .hover-text-primary:hover {
        color: #0d6efd !important;
        transition: color 0.2s ease;
    }
    .card a {
        display: block;
        height: 100%;
    }
    .card-footer {
        position: relative;
        z-index: 2;
    }
    .card:hover {
        cursor: pointer;
    }
    .card-footer button,
    .card-footer input {
        position: relative;
        z-index: 3;
    }
</style>
